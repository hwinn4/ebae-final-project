<%=render partial:"layouts/header", locals:{title: "New Sale"}%>

<h4>Item: <%=@listing.item.name%></h4> <br>
<h4>Sale Price: <%=number_to_currency(@listing.current_price / 100.0)%></h4><br>
<h4>Shipping Price: <%=number_to_currency(@listing.shipping_price / 100.0)%></h4><br>
<h4>Total: <%=number_to_currency((@listing.shipping_price + @listing.current_price) / 100.0)%></h4><br>

<h4>Buyer: <%=@listing.highest_bidder.email%><h4><br>

<%=form_for [@listing, @sale] do |f|%>
  <%= f.hidden_field :listing_id, value: @listing.id%>
  <%= f.submit "Create Sale", class: "btn btn-black" %>
<%end%>
