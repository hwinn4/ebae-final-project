<% @mailer = MailerViewObject.new(@sale) %>

<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Congrats, <%= @buyer.name %>!</h1>
   <h2>You are the winning bidder!</h2>
    <h3>Sale Details:</h3>
    <p>
Item: <%= @listing.item.name %><br>
Final Sale Price: <%=number_to_currency(@listing.current_price / 100.0)%><br>
Shipping: <%=number_to_currency(@listing.shipping_price / 100.0)%><br>
----------------------------------<br>
Total: <%=number_to_currency((@listing.shipping_price + @listing.current_price) / 100.0)%><br>
    </p>

<h3>Seller Contact Information:</h3>
<p><%= @mailer.seller_name_email %></p>
<p><%= @mailer.seller_phones %></p>
<p><%= @mailer.seller_address %></p>
  </body>
</html>