<%= form_for(@bid) do |f| %>
  <%= f.number_field :amount, class: 'text_field', step: 0.01, min: (@listing.min_bid_amount / 100.0), :value => (number_with_precision(f.object.amount, :precision => 2) || 0)%>
  <%= f.hidden_field :listing_id, value: @listing.id %>
  <%= f.submit "Place Bid" %>
<% end %>
