<%=render partial:"layouts/header", locals:{title: "Review Portal"}%>
<div class="page-content">
  <div class="container">
  <h3> Overall Rating: <%= render_stars(@user.average_rating)%></h3>

<h3>Feedback Received as Seller</h3>
  <table class = "table table-striped table-bordered">
    <%@seller.feedback_received.each do |review|%>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Comments</th>
      <th></th>
    </tr>
    <tr>
      <td><center><%=link_to review.sale.listing.item.name, review.sale.listing%></center></td>
      <td><center><%=review.sale.listing.item.description%></center></td>
      <td><center><%= render_stars(review.rating)%></center></td>
      <td><center><%=review.comments%></center></td>
      <td><center><a href="/listings/<%=review.sale.listing.id%>/sales/<%=review.sale.id%>/reviews/<%=review.id%>">Review</a></center></td>
    </tr>
    <%end%>
  </table>

