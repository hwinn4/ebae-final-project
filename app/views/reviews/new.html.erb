<%=form_for [@listing, @sale, @review] do |f|%>
  <%= f.hidden_field :listing_id, value: @listing.id%>
  <%= f.hidden_field :sale_id, value: @sale.id%>
  <%= f.fields_for :review do |review| %>
    <%= review.label :rating %>
    <%= review.number_field :rating %> <br>

    <%= review.label :comments %>
    <%= review.text_field :comments %><br>
    <%= f.submit "Submit Review" %>
  <%end%>
<% end %>
