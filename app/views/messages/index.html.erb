<!-- begin:heading -->
<div class="heads">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><span>//</span>My Messages</h2>
      </div>
    </div>
  </div>
</div>
<!-- end:heading -->

<div class="page-content">
  <div class="container">

<%= form_tag("/messages/update_multiple", method: "patch") do %>

  <h3>Inbox</h3>
    <table class = "table table-striped table-bordered">
    <tr>
      <th>Delete?</th>
      <th>Subject</th>
      <th>Sender</th>
      <th>Time</th>
      <th>Status</th>
    </tr>
    <% @user.received_messages.each do |message| %>
      <tr>
        <td><center><%= check_box "message_ids", message.id %></td>
        <td><%= link_to message.subject, listing_message_path(message.listing, message) %></td>
        <td><%= message.sender.email %></td>
        <td><%= message.created_at %></td>
        <td><%= message.read? ? "Read" : "Unread" %></td>
      </tr>
    <% end %>
  </table>


  <h3>Sent</h3>

  <table class = "table table-striped table-bordered">
    <tr>
      <th>Delete?</th>
      <th>Subject</th>
      <th>Recipient</th>
      <th>Time</th>
      <th>Status</th>
    </tr>
    <% @user.sent_messages.each do |message| %>
      <tr>
        <td><center><%= check_box "message_ids", message.id %></td>
        <td><%= link_to message.subject, listing_message_path(message.listing, message) %></td>
        <td><%= message.recipient.email %></td>
        <td><%= message.created_at %></td>
        <td><%= message.read? ? "Read" : "Unread" %></td>
      </tr>
    <% end %>
  </table>

  <%= submit_tag "Delete Messages" %>
<% end %>

  </div>
</div>
