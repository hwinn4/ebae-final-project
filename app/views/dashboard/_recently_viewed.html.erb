<% recent_views_view_obj = RecentlyViewedListingsViewObject.new(current_user) %>

<% if recent_views_view_obj.has_viewed_listings? %>
  <h3>You recently viewed these listings:</h3>
  <% recent_views_view_obj.recent_views.each do |viewed_listing| %>
  <div class="col-md-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
      <div class="recently-viewed-listing">
      <%= viewed_listing.listing.item.name %>
      <br>
      <a href="/listings/<%= viewed_listing.listing.id %>"><img src="<%= viewed_listing.listing.item.picture_to_use %>" width="200" height="200" /></a>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <h3>Don't forget these items!</h3>
  <% recent_views_view_obj.most_recent_listings.each do |listing| %>
    <div class="recently-viewed-listing">
      <%= listing.item.name %>
      <br>
      <a href="/listings/<%= listing.id %>"><img src="<%= listing.item.picture_to_use %>" width="200" height="200" /></a>
    </div>
  <% end %>
<% end %>
